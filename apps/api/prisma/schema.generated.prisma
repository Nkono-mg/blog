
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
   shadowDatabaseUrl = env("shadowDatabaseUrl")
}


enum ArticleStatus {
  draft
  published
  archived
}


enum EmailStatus {
  draft
  sent
  failed
}

enum UserRole {
  USER
  ADMIN
  EDITOR
}

model Article {
  id          String    @id @default(uuid())
  title       String    @db.VarChar(100)
  content     String    @db.Text 
  excerpt     String?   @db.Text
  status      ArticleStatus   @default(draft)
  featured    Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now()) 
  updatedAt   DateTime  @updatedAt

  // Relation avec User (Auteur)
  author      User      @relation(fields: [authorId], references: [id])
  authorId    String

  // Autres relations obligatoires
  network     Network   @relation(fields: [networkId], references: [id]) 
  networkId   String
  categories  Category[] @relation("ArticleToCategory")
  notifications EmailNotification[]
}

model Category {
  id          String   @id @default(uuid())
  name        String   @db.VarChar(100)
  slug        String   @unique @db.VarChar(100)
  description String   @db.Text
  color       String   @db.VarChar(9) // #RRGGBB ou #RRGGBBAA
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  articles    Article[] @relation("ArticleToCategory")
}

model EmailNotification {
  id          String    @id @default(uuid())
  subject     String 
  recipients  String[] 
  sentAt      DateTime  @default(now()) 
  status      EmailStatus @default(draft)
  article     Article   @relation(fields: [articleId], references: [id]) 
  articleId   String
}

model Network { 
    id String @id @default(uuid()) 
    name String @unique @db.VarChar(50)
    description String @db.VarChar(100)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    //relation avec Article
     articles    Article[] // <-- lien inverse
}

model User {
  id        String   @id @default(uuid())
  userName  String   @db.VarChar(50)
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(255)
  role      UserRole @default(USER) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation : Un utilisateur peut Ã©crire plusieurs articles
  articles  Article[]
}